<div class="details-wrapper" ...attributes>
    <ContentPanel @title={{t "fleet-ops.common.details"}} @open={{true}} @wrapperClass="bordered-top">
        <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100">
            <div class="field-info-container">
                <div class="field-name">Title</div>
                <div class="field-value">{{or @resource.title (concat "Issue reported on " (format-date @model.created_at "dd MMM yy, HH:mm"))}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.status"}}</div>
                <div class="field-value">
                    <Badge @status={{@resource.status}} />
                </div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.reporter"}}</div>
                <div class="field-value">{{n-a @resource.reporter_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.component.issue-panel.details.assigned"}}</div>
                <div class="field-value">{{n-a @resource.assignee_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.driver"}}</div>
                <div class="field-value">{{n-a @resource.driver_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.vehicle"}}</div>
                <div class="field-value">{{n-a @resource.vehicle_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.component.issue-panel.details.type"}}</div>
                <div class="field-value">{{n-a (titleize @resource.type)}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.component.issue-panel.details.category"}}</div>
                <div class="field-value">{{n-a @resource.category}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.component.issue-panel.details.priority"}}</div>
                <div class="field-value">
                    <Badge @status={{@resource.priority}} />
                </div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.date-created"}}</div>
                <div class="field-value">{{@resource.createdAt}}</div>
            </div>
            <div class="field-info-container col-span-2">
                <div class="field-name">Tags</div>
                <div class="field-value flex flex-row items-center space-x-1">
                    {{#each @resource.tags as |tag|}}
                        <div class="rounded-xl border text-sm border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 px-2 py-0.5 flex items-center justify-center">{{tag}}</div>
                    {{/each}}
                </div>
            </div>
            <div class="field-info-container col-span-2">
                <div class="field-name">{{t "fleet-ops.common.coordinates"}}</div>
                <div class="field-value">{{point-coordinates @resource.location}}</div>
            </div>
            <div class="field-info-container col-span-2">
                <div class="field-name">{{t "fleet-ops.component.issue-panel.details.report"}}</div>
                <div class="field-value">{{n-a @resource.report}}</div>
            </div>
        </div>
    </ContentPanel>

    <CustomField::Yield @subject={{@resource}} @viewMode={{true}} @wrapperClass="bordered-top" />
</div>