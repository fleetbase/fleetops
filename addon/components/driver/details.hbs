<div class="details-wrapper" ...attributes>
    <ContentPanel @title={{t "fleet-ops.component.driver-panel.user-account"}} @open={{true}} @panelHeaderClass="bordered">
        <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100 px-1.5">
            <div class="field-info-container md:col-span-3">
                <div class="field-name">{{t "fleet-ops.common.name"}}</div>
                <div class="field-value">{{n-a @resource.name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.email"}}</div>
                <ClickToCopy @value={{@resource.email}} class="field-value">{{n-a @resource.email}}</ClickToCopy>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.phone"}}</div>
                <ClickToCopy @value={{@resource.phone}} class="field-value">{{n-a @resource.phone}}</ClickToCopy>
            </div>
        </div>
    </ContentPanel>

    <ContentPanel @title={{t "fleet-ops.component.driver-panel.driver-details"}} @open={{true}} @panelHeaderClass="bordered">
        <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100 px-1.5">
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.id"}}</div>
                <ClickToCopy @value={{@resource.public_id}} class="field-value">{{n-a @resource.public_id}}</ClickToCopy>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.internal-id"}}</div>
                <div class="field-value">{{n-a @resource.internal_id}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.driver-license"}}</div>
                <div class="field-value">{{n-a @resource.drivers_license_number}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.vendor"}}</div>
                <div class="field-value">{{n-a @resource.vendor_name}}</div>
            </div>
            <div class="col-span-3"></div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.city"}}</div>
                <div class="field-value">{{n-a @resource.city}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.country"}}</div>
                <div class="field-value">
                    <CountryName @country={{@resource.country}} />
                </div>
            </div>
            <div class="field-info-container md:col-span-3">
                <div class="field-name">{{t "fleet-ops.common.coordinates"}}</div>
                <div class="field-value">{{point-coordinates @resource.location}}</div>
            </div>
        </div>
    </ContentPanel>
</div>