<div class="form-wrapper" ...attributes>
    <ContentPanel @title="Device Details" @open={{true}} @wrapperClass="bordered-top">
        <div class="grid grid-cols-1 gap-2 lg:grid-cols-2 lg:gap-2 no-input-group-padding text-xs">
            <InputGroup @name="Device Name" @wrapperClass="col-span-2">
                <Input @value={{@resource.device_name}} @type="text" class="w-full form-input" placeholder="Device Name" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Device Type">
                <div class="fleetbase-model-select fleetbase-power-select ember-model-select">
                    <PowerSelect
                        @options={{this.deviceTypeOptions}}
                        @selected={{@resource.device_type}}
                        @onChange={{fn (mut @resource.device_type)}}
                        @placeholder="Select Device Type"
                        @triggerClass="form-select form-input"
                        @disabled={{cannot-write @resource}}
                        as |type|
                    >
                        {{smart-humanize type}}
                    </PowerSelect>
                </div>
            </InputGroup>

            <InputGroup @name="Device ID">
                <Input @value={{@resource.device_id}} @type="text" class="w-full form-input" placeholder="Device ID" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Device Provider">
                <Input @value={{@resource.device_provider}} @type="text" class="w-full form-input" placeholder="Device Provider" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Device Model">
                <Input @value={{@resource.device_model}} @type="text" class="w-full form-input" placeholder="Device Model" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Manufacturer">
                <Input @value={{@resource.manufacturer}} @type="text" class="w-full form-input" placeholder="Manufacturer" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Serial Number">
                <Input @value={{@resource.serial_number}} @type="text" class="w-full form-input" placeholder="Serial Number" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Device Location">
                <Input @value={{@resource.device_location}} @type="text" class="w-full form-input" placeholder="Device Location" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Installation Date">
                <DatePicker
                    @value={{@resource.installation_date}}
                    @onChange={{fn (mut @resource.installation_date)}}
                    @placeholder="Select Installation Date"
                    @disabled={{cannot-write @resource}}
                    class="w-full form-input"
                />
            </InputGroup>

            <InputGroup @name="Last Maintenance Date">
                <DatePicker
                    @value={{@resource.last_maintenance_date}}
                    @onChange={{fn (mut @resource.last_maintenance_date)}}
                    @placeholder="Select Last Maintenance Date"
                    @disabled={{cannot-write @resource}}
                    class="w-full form-input"
                />
            </InputGroup>

            <InputGroup @name="Data Frequency">
                <Input @value={{@resource.data_frequency}} @type="text" class="w-full form-input" placeholder="Data Frequency" disabled={{cannot-write @resource}} />
            </InputGroup>

            <InputGroup @name="Status">
                <div class="fleetbase-model-select fleetbase-power-select ember-model-select">
                    <PowerSelect
                        @options={{this.statusOptions}}
                        @selected={{@resource.status}}
                        @onChange={{fn (mut @resource.status)}}
                        @placeholder="Select Status"
                        @triggerClass="form-select form-input"
                        @disabled={{cannot-write @resource}}
                        as |status|
                    >
                        {{smart-humanize status}}
                    </PowerSelect>
                </div>
            </InputGroup>

            <InputGroup @name="Telematic">
                <ModelSelect
                    @modelName="telematic"
                    @selectedModel={{@resource.telematic}}
                    @placeholder="Select Telematic"
                    @triggerClass="form-select form-input"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{fn (mut @resource.telematic)}}
                    @onChangeId={{fn (mut @resource.telematic_uuid)}}
                    @disabled={{cannot-write @resource}}
                    as |model|
                >
                    {{model.name}}
                </ModelSelect>
            </InputGroup>

            <InputGroup @name="Warranty">
                <ModelSelect
                    @modelName="warranty"
                    @selectedModel={{@resource.warranty}}
                    @placeholder="Select Warranty"
                    @triggerClass="form-select form-input"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{fn (mut @resource.warranty)}}
                    @onChangeId={{fn (mut @resource.warranty_uuid)}}
                    @disabled={{cannot-write @resource}}
                    as |model|
                >
                    {{model.policy_number}} - {{model.provider}}
                </ModelSelect>
            </InputGroup>

            <InputGroup @name="Notes" @wrapperClass="col-span-2">
                <Textarea
                    @value={{@resource.notes}}
                    aria-label="Notes"
                    class="w-full form-input"
                    disabled={{cannot-write @resource}}
                    placeholder="Notes"
                    rows={{4}}
                />
            </InputGroup>

            <RegistryYield @registry="fleet-ops:component:device:form:details" as |RegistryComponent|>
                <RegistryComponent @resource={{@resource}} @controller={{@controller}} @permission={{get-write-permission @resource}} />
            </RegistryYield>
        </div>
    </ContentPanel>

    <CustomField::Yield @subject={{@resource}} @wrapperClass="bordered-top" />

    <RegistryYield @registry="fleet-ops:component:device:form" as |RegistryComponent|>
        <RegistryComponent @resource={{@resource}} @controller={{@controller}} @permission={{get-write-permission @resource}} />
    </RegistryYield>
</div>
