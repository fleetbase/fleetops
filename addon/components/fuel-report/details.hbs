<div class="details-wrapper" ...attributes>
    <ContentPanel @title={{t "fleet-ops.common.details"}} @open={{true}} @panelHeaderClass="bordered">
        <div class="grid grid-cols-2 gap-2 text-xs dark:text-gray-100 px-1.5">
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.id"}}</div>
                <ClickToCopy @value={{@resource.public_id}} class="field-value">{{n-a @resource.public_id}}</ClickToCopy>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.status"}}</div>
                <div class="field-value"><Badge @status={{@resource.status}} /></div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.reporter"}}</div>
                <div class="field-value">{{n-a @resource.reporter_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.driver"}}</div>
                <div class="field-value">{{n-a @resource.driver_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.vehicle"}}</div>
                <div class="field-value">{{n-a @resource.vehicle_name}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.odometer"}}</div>
                <div class="field-value">{{n-a @resource.odometer}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.cost"}}</div>
                <div class="field-value">{{format-currency @resource.amount @resource.currency}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.component.fuel-report-panel.details.fuel"}}</div>
                <div class="field-value">{{pluralize (or @resource.volume 0) (n-a @resource.metric_unit)}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.date-created"}}</div>
                <div class="field-value">{{@resource.createdAt}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "fleet-ops.common.coordinates"}}</div>
                <div class="field-value">{{point-coordinates @resource.location}}</div>
            </div>
        </div>
    </ContentPanel>
</div>