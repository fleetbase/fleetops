<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <div class="flex px-3 py-2 mb-6 rounded-md shadow-sm bg-blue-200">
            <div>
                <FaIcon @icon="info-circle" class="text-blue-900 mr-4" />
            </div>
            <p class="flex-1 text-sm text-blue-900 dark:text-blue-900">
                {{t "modals.set-password.message"}}
            </p>
        </div>

        <InputGroup
            @name={{t "modals.set-password.new-password"}}
            @value={{@options.password}}
            @type="password"
            @inputClass="form-input-lg"
            @helpText={{t "modals.set-password.help-text"}}
        />
        <InputGroup
            @name={{t "modals.set-password.confirm-password"}}
            @value={{@options.password_confirmation}}
            @type="password"
            @inputClass="form-input-lg"
            @helpText={{t "modals.set-password.help-text"}}
        />
    </div>
</Modal::Default>