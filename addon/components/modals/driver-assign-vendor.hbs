<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <div class="grid grid-cols-1 gap-2 text-xs dark:text-gray-100">
            <InputGroup @name={{t "modals.driver-assign-vendor.vendor"}} @value={{@options.driver.vendor_uuid}}>
                <ModelSelect
                    @modelName="vendor"
                    @selectedModel={{@options.driver.vendor_uuid}}
                    @placeholder={{t "modals.driver-assign-vendor.vendor"}}
                    @triggerClass="form-select form-input"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{fn (mut @options.driver.vendor)}}
                    @onChangeId={{fn (mut @options.driver.vendor_uuid)}}
                    as |model|
                >
                    {{model.name}}
                </ModelSelect>
            </InputGroup>
        </div>
    </div>
    {{yield}}
</Modal::Default>