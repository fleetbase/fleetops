<div class="details-wrapper" ...attributes>
    <ContentPanel @title="Details" @open={{true}} @wrapperClass="bordered-top">
        <div class="integrated-vendor-button border-0 mb-4">
            <div>
                <img src={{@vendor.provider_settings.logo}} alt={{@vendor.provider_settings.code}} class="w-20 h-20" width="80" height="80" />
            </div>
            <div>
                <h3 class="text-sm font-semibold dark:text-white">{{@vendor.provider_settings.name}}</h3>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-2 text-xs dark:text-gray-100">
            <div class="field-info-container">
                <div class="field-name">{{t "common.sandbox"}}</div>
                <div class="field-value">{{if @vendor.sandbox "Yes" "No"}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "common.host"}}</div>
                <div class="field-value">{{n-a @vendor.host}}</div>
            </div>
            <div class="field-info-container">
                <div class="field-name">{{t "common.namespace"}}</div>
                <div class="field-value">{{n-a @vendor.namespace}}</div>
            </div>
            {{#if (is-object @vendor.options)}}
                {{#each-in @vendor.options as |key value|}}
                    <div class="field-info-container">
                        <div class="field-name">{{smart-humanize key}}</div>
                        <div class="field-value">{{n-a value}}</div>
                    </div>
                {{/each-in}}
            {{/if}}
        </div>
    </ContentPanel>
</div>