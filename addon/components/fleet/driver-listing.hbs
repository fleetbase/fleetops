<div class={{or @wrapperClass @options.wrapperClass}}>
    <div class="fleet-driver-listing" ...attributes>
        <div class="mb-3 flex items-center justify-between">
            <div class="flex items-center">
                <div class="fleet-driver-listing-search">
                    <Input @type="text" {{on "input" this.onInput}} placeholder={{t "fleet-ops.component.fleet-panel.driver-listing.search-driver"}} class="w-64 form-input form-input-sm" />
                </div>
                {{#if this.search.isRunning}}
                    <div class="mx-2">
                        <Spinner @iconClass="text-sky-500 fa-spin-800ms" />
                    </div>
                {{/if}}
            </div>
            <div class="w-56">
                <ModelSelect
                    @modelName="driver"
                    @selectedModel={{this.selectedDriver}}
                    @placeholder={{t "fleet-ops.component.fleet-panel.driver-listing.add-driver"}}
                    @triggerClass="form-select form-input form-select-sm form-input-sm"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{this.onAddDriver}}
                    as |model|
                >
                    {{model.name}}
                </ModelSelect>
            </div>
        </div>
        <div class="bg-white border border-gray-200 rounded shadow-sm dark:bg-gray-900 dark:border-gray-700 text-xs">
            <div class="w-full">
                <div class="grid grid-cols-12 text-xs p-3 font-semibold text-gray-800 dark:text-gray-100 border-b border-gray-200 dark:border-gray-700 shadow-sm">
                    {{#if this.selectable}}
                        <div></div>
                    {{/if}}
                    <div class="col-span-4 flex items-center">{{t "fleet-ops.common.driver"}}</div>
                    <div class="col-span-7 flex items-center"></div>
                </div>
            </div>
            <div class="h-48 overflow-y-scroll bg-gray-50 dark:bg-gray-800">
                {{#if (and (not this.drivers) this.search.isRunning)}}
                    <div class="flex items-center justify-center p-4 dark:text-gray-100">
                        <div class="mr-2">
                            <Spinner @iconClass="text-sky-500" />
                        </div>
                        <span>{{t "fleet-ops.component.fleet-panel.driver-listing.loading-driver"}}</span>
                    </div>
                {{/if}}
                {{#each this.drivers as |driver|}}
                    <div class="flex flex-row items-center justify-between text-xs py-2 px-3 text-gray-800 border-b border-gray-200 dark:border-gray-700 dark:text-gray-100 bg-gray-50 dark:bg-gray-800">
                        <div class="flex flex-row items-center">
                            {{#if this.selectable}}
                                <div class="flex items-center mr-2">
                                    <Checkbox @value={{includes driver this.selected}} @onToggle={{fn this.onSelect driver}} />
                                </div>
                            {{/if}}
                            <div class="flex items-center">
                                <div class="flex flex-row items-start">
                                    <div class="mr-2">
                                        <div class="relative">
                                            <Image src={{driver.photo_url}} alt={{driver.name}} class="w-5 h-5 rounded-md" @fallbackSrc={{config "defaultValues.driverImage"}} />
                                            <FaIcon @icon="circle" class="absolute right-0 top-0 -mr-1 -mt-1 {{if driver.online 'text-green-500' 'text-yellow-200'}}" />
                                        </div>
                                    </div>
                                    <div>
                                        <div class="font-semibold">{{driver.name}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center justify-end">
                            <a href="javascript:;" class="text-danger text-opacity-75" {{on "click" (fn this.onRemoveDriver driver)}}>
                                <FaIcon @icon="times" @prefix="fas" class="mr-1" />
                                <span>{{t "fleet-ops.common.remove"}}</span>
                            </a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>