<Layout::Sidebar::Panel
    @open={{true}}
    @title={{@title}}
    @titleIcon={{@icon}}
    @hideCaret={{true}}
    @caretLeft={{true}}
    @caretIcon="caret"
    @toggleOnCaretOnly={{true}}
    @onClickPanelTitle={{this.transitionToRoute}}
    @permission={{@permission}}
    @wrapperClass="next-fleet-summary"
>
    {{#each this.fleets as |fleet|}}
        <FleetListingPanel
            @fleet={{fleet}}
            @onVehicleClicked={{this.onVehicleClicked}}
            @depth={{1}}
            @open={{true}}
            @itemDropdownMenuWrapperClass="next-sidebar-panel-menu-dropdown"
            @itemDropdownButtonCalculatePosition={{this.calculateDropdownItemPosition}}
            @itemDropdownButton={{true}}
            @itemDropdownButtonActions={{this.dropdownButtonActions}}
        />
    {{/each}}
</Layout::Sidebar::Panel>