<div class="form-wrapper" ...attributes>
    <ContentPanel @title={{t "fleet-ops.component.contact-form-panel.contact-details"}} @open={{true}}>
        <div class="flex flex-row space-x-3 mb-3">
            <div class="flex items-center justify-start rounded-full">
                <Image src={{@resource.photo_url}} @fallbackSrc={{config "defaultValues.userImage"}} alt={{@resource.name}} height="48" width="48" class="h-14 w-14 rounded-full shadow-sm" />
                <Attach::Tooltip @class="clean" @animation="scale" @placement="top">
                    <InputInfo @text={{t "fleet-ops.component.driver-form-panel.upload-new-photo"}} />
                </Attach::Tooltip>
            </div>
            <div>
                <UploadButton
                    @name={{t "fleet-ops.common.photos"}}
                    @accept="image/*"
                    @onFileAdded={{perform this.handlePhotoUpload}}
                    @icon="upload"
                    @size="xs"
                    @buttonText="Upload image"
                    @disabled={{cannot-write @driver}}
                />
                <div class="px-1">
                    <span class="text-gray-300 dark:text-gray-600 text-xs">Supports PNGs, JPEGs and GIFs</span>
                </div>
            </div>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 text-xs no-input-group-padding">
            <InputGroup @name={{t "fleet-ops.common.name"}}>
                <Input @value={{@resource.name}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.common.name"}} disabled={{cannot-write @resource}} />
            </InputGroup>
            <InputGroup @name={{t "fleet-ops.common.title"}}>
                <Input @value={{@resource.title}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.common.title"}} disabled={{cannot-write @resource}} />
            </InputGroup>
            <InputGroup @name={{t "fleet-ops.common.email"}}>
                <Input @value={{@resource.email}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.common.email"}} disabled={{cannot-write @resource}} />
            </InputGroup>
            <InputGroup @name={{t "fleet-ops.common.phone"}}>
                <PhoneInput @value={{@resource.phone}} @onInput={{fn (mut @resource.phone)}} class="form-input w-full" disabled={{cannot-write @resource}} />
            </InputGroup>
            <InputGroup @name={{t "fleet-ops.common.internal-id"}}>
                <Input @value={{@resource.internal_id}} @type="text" class="w-full form-input" placeholder={{t "fleet-ops.common.internal-id"}} disabled={{cannot-write @resource}} />
            </InputGroup>
            <InputGroup @wrapperClass="col-span-2">
                <div class="flex items-center justify-between">
                    <label>
                        {{t "fleet-ops.common.address"}}
                    </label>
                    <div class="mb-1.5 space-x-1 flex flex-row">
                        {{#if @resource.has_place}}
                            <Button @type="danger" @size="xs" @icon="trash" @text="Remove" @onClick={{this.removePlace}} @disabled={{cannot-write @resource}} />
                        {{/if}}
                        <Button
                            @type="default"
                            @size="xs"
                            @icon="edit"
                            @text={{if @resource.has_place (t "fleet-ops.component.contact-form-panel.edit") (t "fleet-ops.component.contact-form-panel.new-address")}}
                            @onClick={{this.editPlace}}
                            @disabled={{cannot-write @resource}}
                        />
                    </div>
                </div>
                <ModelSelect
                    @modelName="place"
                    @selectedModel={{@resource.place}}
                    @placeholder={{t "fleet-ops.component.contact-form-panel.select-address"}}
                    @triggerClass="form-select form-input"
                    @infiniteScroll={{false}}
                    @renderInPlace={{true}}
                    @onChange={{this.selectPlace}}
                    @disabled={{cannot-write @resource}}
                    as |model|
                >
                    <div class="flex items-center flex-row justify-between">
                        <div class="truncate flex-1">{{n-a model.address}}</div>
                        <Badge @hideStatusDot={{true}} @status="info">{{model.public_id}}</Badge>
                    </div>
                </ModelSelect>
            </InputGroup>

            <RegistryYield @registry="fleet-ops:component:contact:form:details" as |RegistryComponent|>
                <RegistryComponent @resource={{@resource}} @controller={{@controller}} @permission={{get-write-permission @resource}} />
            </RegistryYield>
        </div>
    </ContentPanel>
</div>

<RegistryYield @registry="fleet-ops:component:contact:form" as |RegistryComponent|>
    <RegistryComponent @resource={{@resource}} @controller={{@controller}} @permission={{get-write-permission @resource}} />
</RegistryYield>