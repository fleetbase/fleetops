<Layout::Resource::Panel
    @resource={{this.equipment}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle={{t "common.create-new-resource" resource=(lowercase (t "resource.equipment"))}}
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "maintenance.equipment.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Equipment::Form @resource={{this.place}} @controller={{this}} />
    <Spacer @height="200px" />
</Layout::Resource::Panel>