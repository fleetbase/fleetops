<Layout::Resource::Panel
    @resource={{this.device}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle="Create a new device"
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "connectivity.devices.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Device::Form @resource={{this.device}} @controller={{this}} />
    <Spacer @height="200px" />
</Layout::Resource::Panel>