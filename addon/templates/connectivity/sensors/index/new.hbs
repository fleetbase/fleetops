<Layout::Resource::Panel
    @resource={{this.sensor}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle="Create a new sensor"
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "connectivity.sensors.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Sensor::Form @resource={{this.sensor}} @controller={{this}} />
    <Spacer @height="200px" />
</Layout::Resource::Panel>