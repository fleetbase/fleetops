<Layout::Resource::Panel
    @resource={{this.place}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle="Create a new place"
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "management.places.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Place::Form @resource={{this.place}} @controller={{this}} class="px-4" />
</Layout::Resource::Panel>