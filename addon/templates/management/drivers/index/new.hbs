<Layout::Resource::Panel
    @resource={{this.driver}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle="Create a new driver"
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "management.drivers.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Driver::Form @resource={{this.driver}} @controller={{this}} class="px-4" />
</Layout::Resource::Panel>

