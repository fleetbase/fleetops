<Layout::Resource::Panel
    @resource={{@model}}
    @controller={{this}}
    @headerTitle={{concat "Edit issue: " @model.title}}
    @actionButtons={{this.actionButtons}}
    @saveTask={{this.save}}
    @onPressCancel={{this.cancel}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Issue::Form @resource={{@model}} @controller={{this}} class="px-4" />
</Layout::Resource::Panel>

