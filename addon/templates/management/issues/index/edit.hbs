<Layout::Resource::Panel
    @resource={{@model}}
    @controller={{this}}
    @headerTitle={{t "common.edit-resource-name" resourceName=@model.title}}
    @actionButtons={{this.actionButtons}}
    @saveTask={{this.save}}
    @onPressCancel={{this.cancel}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Issue::Form @resource={{@model}} @controller={{this}} />
    <Spacer @height="400px" />
</Layout::Resource::Panel>

