<Layout::Resource::Panel
    @resource={{this.issue}}
    @controller={{this}}
    @actionButtons={{this.actionButtons}}
    @headerTitle="Create a new issue"
    @saveTask={{this.save}}
    @onPressCancel={{transition-to "management.issues.index"}}
    @onOverlayReady={{fn (mut this.overlay)}}
>
    <Issue::Form @resource={{this.issue}} @controller={{this}} />
    <Spacer @height="200px" />
</Layout::Resource::Panel>

